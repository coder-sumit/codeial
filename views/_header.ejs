<header>
  <nav>
  <div id="logo">
    <a href="/">
    <h1>
      Codeial
    </h1>
  </a>
  </div>
    
  <ul>
    <% if(locals.user){ %>
         
            <li>
              <a href="/users/profile/<%= user.id %>">
                <% if(user.avatar){ %> 
                  <img src="<%= user.avatar %>" alt="<%= user.name %>"> 
                <% } else{%>
               <img src="/images/profile.svg" alt="<%= user.name %>"> 
               <% } %>
               <span> <%= user.name %> </span>
              </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        
    <% }else{ %>
          <li>
            <a href="/users/sign-in">Sign In</a>
          </li>
          <li>
            <a href="/users/sign-up">Sign Up</a>
          </li>
    <% } %>
  </ul>
</nav>
</header>