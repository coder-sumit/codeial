 <link rel="stylesheet" href="/css/style.css">
 
 <h1>
        Codeial/<%= title %>
 </h1>

<section id="feed-posts">
   <h4>Posts</h4>
   <% if(locals.user){ %>
   <form action="/posts/create" method="post">
       <textarea  name="content" cols="30" rows="3" placeholder="Write Here..." required></textarea>
       <input type="submit" value="Post">
   </form>
   <% } %>

   <div class="post-container">
    <% for(post of posts){ %>
    <div class="post">
        <p><%= post.content %></p>
        <small><%= post.user.name %></small>
        <!-- delete post btn -->
        <% if(locals.user && locals.user.id == post.user.id) {%>
            <br><small>
          <a href="posts/destroy/<%= post.id %>">Delete</a>
        </small> <br><br>
        <% } %>


        <% if(locals.user){ %>
        <form class="comment-form" action="/comments/create" method="post">
            <textarea name="comment" id="" cols="30" rows="1" required></textarea>
            <input type="hidden" name="post" value="<%= post._id %>">
            <input type="submit" value="Comment">
        </form>
        <% } %>

        <div class="post-comment-lists">
            <ul class="post-comments">
                <% for(comment of post.comments){ %>
                    <li>
                        <p>
                            <%= comment.content %> 
                            <% if(locals.user && (locals.user.id == post.user.id || locals.user.id == comment.user.id)){ %>
                                <small>
                                    <a href="/comments/destroy/<%= comment.id %>">X</a>
                                </small>
                                <% } %>
                            <br>
                            <small><%= comment.user.name %> </small>
                        </p>
                    </li>
                    
                <% } %>
            </ul>
        </div>
    </div>
    <% } %>
   </div>
</section>

<script src="/js/app.js"></script>